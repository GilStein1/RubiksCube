<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#424242"/> <!-- Darker gray for press effect -->
            <corners android:radius="25dp"/>
            <stroke android:width="2dp" android:color="#616161"/> <!-- Lighter gray border -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#333333"
                android:endColor="#111111"
                android:angle="45"/>
            <corners android:radius="25dp"/>
            <stroke android:width="2dp" android:color="#888888"/>
        </shape>
    </item>
</selector>
